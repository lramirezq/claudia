.fields
  = f.hidden_field :_destroy
  %table.sglea
    %tr
      %td.tit{:width => "15%"} Nombre
      %td.inp{:width => "25%"}= f.object.nombre
      %td.tit{:width => "15%"} Detalle
      %td.inp{:width => "20%"}= f.object.detalle
      %td.tit{:width => "15%"} Estado
      %td.inp{:width => "20%"}= f.object.estado.to_s=="true"?"TERMINADA":"EN EJECUCION"
      %td.inp{:width => "20%"}= link_to_remove_fields "Eliminar", f if not form_disabled