%p
#photolayer{:style => "z-index: 1; left: 5px; top: 50px; width: 100; \r\nheight: 25px; background-color:#E6CBCB; visibility: visible"}
  %center
    %h1 FASE
%p
.fields
  = f.hidden_field :_destroy
  %table.sglea
    %tr
      %td.tit Nombre
      %td.inp= f.object.nombre
      %td.tit Detalle
      %td.inp= f.object.detalle
      %td.inp= link_to_remove_fields "Eliminar", f if not form_disabled

%h3.titulo01  ARCHIVOS
.field
  = f.fields_for :documentos do |builder|
    = render 'documento_fields', :f => builder, :form_disabled => form_disabled
= link_to_add_fields "Agregar Archivo", f, :documentos if not form_disabled
%br/
%br/
	
%h3.titulo01  ACTIVIDADES DE FASE
.field
  = f.fields_for :actividads do |builder|
    = render 'form_actividad_valida', :f => builder, :form_disabled => form_disabled
= link_to_add_fields "Agregar Actividad", f, :actividads if not form_disabled
%br/
%br/